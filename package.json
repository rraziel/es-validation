{
  "name": "es-validation",
  "version": "0.1.0",
  "description": "ECMAScript decorators for validation, inspired by JSR-303, JSR-349 and JSR-380.",
  "homepage": "https://github.com/rraziel/es-validation",
  "bugs": "https://github.com/rraziel/es-validation/issues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rraziel/es-validation.git"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc --watch -p .",
    "test": "./node_modules/.bin/jest --watch --no-cache --verbose",
    "coverage": "./node_modules/.bin/jest --no-cache --coverage",
    "tslint": "tslint --project ./tsconfig.json --config ./conf/tslint.json"
  },
  "jest": {
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/index.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "testResultsProcessor": "<rootDir>/node_modules/jest-junit-reporter",
    "testRegex": "\\.spec\\.ts",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "reflect-metadata": "0.1.12"
  },
  "devDependencies": {
    "@types/jest": "23.1.1",
    "codecov": "3.0.4",
    "jest": "22.4.0",
    "jest-create-mock-instance": "1.0.3",
    "jest-junit-reporter": "1.1.0",
    "json-loader": "0.5.7",
    "ts-jest": "22.4.6",
    "ts-node": "7.0.0",
    "tslint": "5.9.1",
    "typescript": "2.7.2"
  }
}
